{
  "name": "light-fsm",
  "description": "A lightweight finite state machine library",
  "version": "0.7.0",
  "license": "MIT",
  "scripts": {
    "test": "vitest --ui",
    "test:run": "vitest run",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "eslint": "CI=true eslint src/ --color --max-warnings=0",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup",
    "build-test": "tsup --config tsup.test.config.ts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build"
  },
  "files": [
    "dist"
  ],
  "repository": "github:lucasols/light-fsm",
  "author": "Lucas Santos",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=21.5.0"
  },
  "devDependencies": {
    "@ls-stack/extended-lint": "^0.11.0",
    "@ls-stack/utils": "^2.0.1",
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.8.4",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitest/ui": "^2.1.4",
    "eslint": "^9.13.0",
    "eslint-plugin-unicorn": "^56.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tsm": "^2.3.0",
    "tsup": "^8.3.5",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "t-state": "^9.2.3"
  }
}
