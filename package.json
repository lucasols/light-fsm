{
  "name": "light-fsm",
  "description": "A lightweight finite state machine library",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "test": "vitest --ui",
    "test:run": "vitest run",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "eslint": "CI=true eslint src/ scripts/ --color --max-warnings=0",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test && pnpm build:update-exports",
    "build:no-test": "tsup",
    "build:update-exports": "tsm --no-warnings scripts/updatePackageExports.ts",
    "build-test": "tsup --config tsup.test.config.ts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build"
  },
  "files": [
    "dist"
  ],
  "repository": "github:lucasols/light-fsm",
  "author": "Lucas Santos",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=21.5.0"
  },
  "devDependencies": {
    "@lucasols/eslint-plugin-extended-lint": "^1.5.0",
    "@lucasols/utils": "^4.23.2",
    "@types/eslint": "^8.56.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/ui": "^1.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vitest": "^0.3.22",
    "prettier": "3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "tsm": "^2.3.0",
    "tsup": "^8.0.2",
    "typescript": "5.4.0-beta",
    "vite": "^5.1.3",
    "vitest": "^1.3.0"
  },
  "dependencies": {
    "t-state": "^8.10.1"
  }
}
